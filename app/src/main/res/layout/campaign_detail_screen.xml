                            android:layout_height="wrap_content"
                            android:gravity="center_vertical"
                            android:layout_gravity="fill"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/size_45"
                                android:text="@string/campaign_setname"
                                android:textColor="@color/grey"
                                android:layout_weight="1"
                                android:gravity="center_vertical"
                                android:textSize="@dimen/text_size_16"/>


                            <TextView
                                android:id="@+id/campaign_setname"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:textColor="@color/black"
                                android:layout_weight="1"
                                android:textSize="@dimen/text_size_16"/>


                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center_vertical"
                            android:layout_gravity="fill"
                            android:orientation="horizontal">
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/size_45"
                                android:text="@string/campaign_access"
                                android:layout_weight="1"
                                android:textColor="@color/grey"
                                android:gravity="center_vertical"
                                android:textSize="@dimen/text_size_16"/>


                            <TextView
                                android:id="@+id/campaign_access"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"

                                android:textColor="@color/black"
                                android:layout_weight="1"
                                android:textSize="@dimen/text_size_16"/>


                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center_vertical"
                            android:layout_gravity="fill"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/size_45"
                                android:text="@string/description"
                                android:textColor="@color/grey"
                                android:gravity="center_vertical"
                                android:layout_weight="1"
                                android:textSize="@dimen/text_size_16"/>

                            <TextView
                                android:id="@+id/description"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:textColor="@color/black"
                                android:layout_weight="1"
                                android:textSize="@dimen/text_size_16"/>



                        </LinearLayout>

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="0.5dp"
                            android:background="@color/veryLightGrey"/>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/lead_underline"
                            android:textColor="@color/black"
                            android:fontFamily="@font/admin_muli_semibold"
                            android:textSize="@dimen/text_size_18"
                            android:layout_marginTop="10dp"/>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center_vertical"
                            android:layout_gravity="fill"
                            android:orientation="horizontal">
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/size_45"
                                android:text="@string/source"
                                android:textColor="@color/grey"
                                android:layout_weight="1"
                                android:gravity="center_vertical"
                                android:textSize="@dimen/text_size_16"/>


                            <TextView
                                android:id="@+id/source"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:textColor="@color/black"
                                android:layout_weight="1"

                                android:textSize="@dimen/text_size_16"/>


                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center_vertical"
                            android:layout_gravity="fill"
                            android:orientation="horizontal">
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/size_45"
                                android:text="@string/priority"
                                android:textColor="@color/grey"
                                android:layout_weight="1"
                                android:gravity="center_vertical"
                                android:textSize="@dimen/text_size_16"/>


                            <TextView
                                android:id="@+id/priority"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:textColor="@color/black"
                                android:layout_weight="1"
                                android:textSize="@dimen/text_size_16"/>


                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center_vertical"
                            android:layout_gravity="fill"
                            android:orientation="horizontal">
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/size_45"
                                android:text="@string/from_date"
                                android:textColor="@color/grey"
                                android:layout_weight="1"
                                android:gravity="center_vertical"
                                android:textSize="@dimen/text_size_16"/>


                            <TextView
                                android:id="@+id/from_date"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:textColor="@color/black"
                                android:layout_weight="1"
                                android:textSize="@dimen/text_size_16"/>


                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center_vertical"
                            android:layout_gravity="fill"
                            android:orientation="horizontal">
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/size_45"
                                android:text="@string/to_date"
                                android:textColor="@color/grey"
                                android:layout_weight="1"
                                android:gravity="center_vertical"
                                android:textSize="@dimen/text_size_16"/>

                            <TextView
                                android:id="@+id/to_date"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:textColor="@color/black"
                                android:layout_weight="1"

                                android:textSize="@dimen/text_size_16"/>


                        </LinearLayout>



                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center_vertical"
                            android:layout_gravity="fill"
                            android:orientation="horizontal">
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/size_45"
                                android:text="@string/status"
                                android:textColor="@color/grey"
                                android:layout_weight="1"
                                android:gravity="center_vertical"
                                android:textSize="@dimen/text_size_16"/>

                            <TextView
                                android:id="@+id/status"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:textColor="@color/black"
                                android:layout_weight="1"

                                android:textSize="@dimen/text_size_16"/>


                        </LinearLayout>


                        <View
                            android:layout_marginTop="@dimen/size_10"
                            android:layout_width="match_parent"
                            android:layout_height="0.5dp"
