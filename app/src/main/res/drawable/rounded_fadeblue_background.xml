<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- solids that simulate shadow !-->
    <item>
        <shape>
            <corners android:radius="@dimen/size_8"></corners>
            <solid android:color="@color/circle_color" />
            <padding android:top="1dp" android:right="1dp" android:bottom="1dp" android:left="1dp" />
            <stroke android:width="@dimen/size_4" android:color="@color/circle_color"/>
        </shape>
    </item>





    <!-- main background !-->
    <item>
        <shape>
            <corners android:radius="@dimen/size_10"></corners>
            <solid android:color="#1A8D7FDB" />
        </shape>
    </item>


</layer-list>